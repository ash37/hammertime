<div id="invoice_labour_picker" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-semibold text-slate-900">Add labour</p>
      <p class="text-xs text-slate-500">Unbilled timesheets for this job</p>
    </div>
  </div>

  <% if invoice.job && (current_user&.owner? || current_user&.admin?) %>
    <%= form_with url: add_labour_invoice_path(invoice), method: :post, class: "mt-4 space-y-4" do %>
      <div class="overflow-hidden rounded-xl border border-slate-100">
        <table class="min-w-full divide-y divide-slate-100 text-sm">
          <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-400">
            <tr>
              <th class="px-4 py-3 text-left"></th>
              <th class="px-4 py-3 text-left">Date</th>
              <th class="px-4 py-3 text-left">User</th>
              <th class="px-4 py-3 text-right">Hours</th>
              <th class="px-4 py-3 text-right">Rate</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 text-slate-600">
            <% unbilled_timesheets.each do |entry| %>
              <tr>
                <td class="px-4 py-3">
                  <%= check_box_tag "timesheet_entry_ids[]", entry.id, false, class: "h-4 w-4 rounded border-slate-300 text-slate-900" %>
                </td>
                <td class="px-4 py-3"><%= entry.work_date.strftime("%d %b %Y") %></td>
                <td class="px-4 py-3"><%= entry.user.display_name %></td>
                <td class="px-4 py-3 text-right"><%= entry.hours.round(2) %></td>
                <td class="px-4 py-3 text-right"><%= number_to_currency(entry.hourly_rate_cents / 100.0) %></td>
              </tr>
            <% end %>
            <% if unbilled_timesheets.empty? %>
              <tr>
                <td class="px-4 py-6 text-center text-sm text-slate-500" colspan="5">No unbilled timesheets.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="flex justify-end">
        <%= submit_tag "Add selected labour", class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800", disabled: unbilled_timesheets.empty? %>
      </div>
    <% end %>
  <% else %>
    <div class="mt-4 rounded-xl border border-dashed border-slate-200 p-4 text-sm text-slate-500">
      Assign a job to this invoice to add labour.
    </div>
  <% end %>
</div>
