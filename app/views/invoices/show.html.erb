<% content_for :page_title, "Invoice ##{@invoice.invoice_number}" %>

<div class="space-y-6">
  <div id="invoice_header" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <%= render "header", invoice: @invoice %>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Company</p>
      <p class="mt-2 text-base font-semibold text-slate-900"><%= @invoice.account.company_name %></p>
      <% if @invoice.account.abn.present? %>
        <p class="mt-2 text-sm text-slate-600">ABN: <%= @invoice.account.abn %></p>
      <% end %>
      <p class="mt-1 text-sm text-slate-600">GST Registered: <%= @invoice.account.gst_registered ? "Yes" : "No" %></p>
      <% if @invoice.account.company_licence_number.present? %>
        <p class="mt-1 text-sm text-slate-600">Licence: <%= @invoice.account.company_licence_number %></p>
      <% end %>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Billing</p>
      <p class="mt-2 text-base font-semibold text-slate-900"><%= @invoice.customer.name %></p>
      <p class="mt-1 text-sm text-slate-600 whitespace-pre-line"><%= @invoice.customer.billing_address.presence || "Address on file" %></p>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <%= render "line_items_table", invoice: @invoice, line_items: @line_items %>
  </div>

  <div class="grid gap-6 lg:grid-cols-3">
    <div class="lg:col-span-2 space-y-6">
      <%= render "labour_picker", invoice: @invoice, unbilled_timesheets: @unbilled_timesheets %>
      <%= render "materials_picker", invoice: @invoice, unbilled_materials: @unbilled_materials %>
    </div>
    <%= render "totals", invoice: @invoice %>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-center gap-3">
      <% if current_user&.owner? || current_user&.admin? %>
        <%= button_to "Mark sent", mark_sent_invoice_path(@invoice), method: :patch, class: "rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50" %>
        <%= button_to "Mark paid", mark_paid_invoice_path(@invoice), method: :patch, class: "rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50" %>
        <%= button_to "Void", void_invoice_path(@invoice), method: :patch, class: "rounded-xl border border-rose-200 px-4 py-2 text-sm font-semibold text-rose-600 hover:bg-rose-50" %>
      <% end %>
      <%= link_to "Print", print_invoice_path(@invoice), class: "ml-auto rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800", target: "_blank" %>
    </div>
  </div>
</div>
