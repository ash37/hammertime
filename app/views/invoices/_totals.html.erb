<div id="invoice_totals" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <p class="text-sm font-semibold text-slate-900">Totals</p>
  <div class="mt-4 space-y-2 text-sm text-slate-600">
    <div class="flex items-center justify-between">
      <span>Subtotal</span>
      <span class="font-semibold text-slate-900"><%= number_to_currency(invoice.subtotal_cents / 100.0) %></span>
    </div>
    <div class="flex items-center justify-between border-t border-slate-100 pt-3">
      <span>Total</span>
      <span class="text-lg font-semibold text-slate-900"><%= number_to_currency(invoice.total_cents / 100.0) %></span>
    </div>
  </div>
</div>
