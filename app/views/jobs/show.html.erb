<% content_for :page_title, @job.title %>

<div class="space-y-6">
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-start justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Job</p>
        <h2 class="mt-2 text-xl font-semibold text-slate-900"><%= @job.title %></h2>
        <p class="mt-1 text-sm text-slate-500"><%= @job.customer.name %></p>
      </div>
      <div class="flex items-center gap-3">
        <div class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
          <%= @job.status.titleize %>
        </div>
        <%= link_to "Edit", edit_job_path(@job), class: "rounded-xl border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
        <%= button_to "Delete", job_path(@job), method: :delete, class: "rounded-xl border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600 hover:bg-rose-50", data: { turbo_confirm: "Delete this job? This cannot be undone." } %>
      </div>
    </div>
    <% if @job.description.present? %>
      <p class="mt-4 text-sm text-slate-600"><%= @job.description %></p>
    <% end %>
    <% if @job.site_address.present? %>
      <p class="mt-2 text-sm text-slate-500"><%= @job.site_address %></p>
    <% end %>
  </div>

  <%= render "timesheets_panel", job: @job, unbilled_timesheets: @unbilled_timesheets, draft_invoices: @draft_invoices %>
  <%= render "materials_panel", job: @job, unbilled_materials: @unbilled_materials, draft_invoices: @draft_invoices %>
</div>
