<div id="job_materials_panel" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-semibold text-slate-900">Materials</p>
      <p class="text-xs text-slate-500">Unbilled purchases for this job</p>
    </div>
    <%= link_to "Add material", new_material_purchase_path(job_id: job.id), class: "rounded-xl border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
  </div>

  <% if current_user&.owner? || current_user&.admin? %>
    <%= form_with url: add_materials_to_invoice_job_path(job), method: :post, class: "mt-4 space-y-4" do |form| %>
      <div class="flex flex-wrap items-center gap-3">
        <div class="min-w-[240px]">
          <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Invoice</label>
          <%= select_tag :invoice_id,
            options_for_select([["Create new draft", "new"]] + draft_invoices.map { |inv| ["Draft ##{inv.invoice_number}", inv.id] }, params[:invoice_id]),
            class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
        </div>
        <%= submit_tag "Add selected to invoice", class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
      </div>

      <div class="overflow-hidden rounded-xl border border-slate-100">
        <table class="min-w-full divide-y divide-slate-100 text-sm">
          <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-400">
            <tr>
              <th class="px-4 py-3 text-left"></th>
              <th class="px-4 py-3 text-left">Date</th>
              <th class="px-4 py-3 text-left">Supplier</th>
              <th class="px-4 py-3 text-left">Description</th>
              <th class="px-4 py-3 text-right">Qty</th>
              <th class="px-4 py-3 text-right">Unit sell</th>
              <th class="px-4 py-3 text-right">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 text-slate-600">
            <% unbilled_materials.each do |purchase| %>
              <tr>
                <td class="px-4 py-3">
                  <%= check_box_tag "material_purchase_ids[]", purchase.id, false, class: "h-4 w-4 rounded border-slate-300 text-slate-900" %>
                </td>
                <td class="px-4 py-3"><%= purchase.purchased_on.strftime("%d %b %Y") %></td>
                <td class="px-4 py-3"><%= purchase.supplier_name %></td>
                <td class="px-4 py-3"><%= purchase.description %></td>
                <td class="px-4 py-3 text-right"><%= purchase.quantity.to_f %></td>
                <td class="px-4 py-3 text-right"><%= number_to_currency(purchase.sell_unit_price_cents / 100.0) %></td>
                <td class="px-4 py-3 text-right font-medium text-slate-900"><%= number_to_currency(purchase.total_sell_cents / 100.0) %></td>
              </tr>
            <% end %>
            <% if unbilled_materials.empty? %>
              <tr>
                <td class="px-4 py-6 text-center text-sm text-slate-500" colspan="7">No unbilled materials.</td>
              </tr>
            <% end %>
          </tbody>
          <% if unbilled_materials.any? %>
            <tfoot class="bg-slate-50 text-sm text-slate-600">
              <tr>
                <td class="px-4 py-3 text-right font-semibold" colspan="6">Unbilled total</td>
                <td class="px-4 py-3 text-right font-semibold text-slate-900">
                  <%= number_to_currency(unbilled_materials.sum { |item| item.total_sell_cents } / 100.0) %>
                </td>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    <% end %>
  <% else %>
    <div class="mt-4 rounded-xl border border-dashed border-slate-200 p-4 text-sm text-slate-500">
      Only admins can add materials to invoices.
    </div>
  <% end %>
</div>
