<div id="job_timesheets_panel" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-semibold text-slate-900">Timesheets</p>
      <p class="text-xs text-slate-500">Unbilled entries for this job</p>
    </div>
    <%= link_to "Add timesheet", new_timesheet_entry_path(job_id: job.id), class: "rounded-xl border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
  </div>

  <% if current_user&.owner? || current_user&.admin? %>
    <%= form_with url: add_timesheets_to_invoice_job_path(job), method: :post, class: "mt-4 space-y-4" do |form| %>
      <div class="flex flex-wrap items-center gap-3">
        <div class="min-w-[240px]">
          <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Invoice</label>
          <%= select_tag :invoice_id,
            options_for_select([["Create new draft", "new"]] + draft_invoices.map { |inv| ["Draft ##{inv.invoice_number}", inv.id] }, params[:invoice_id]),
            class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
        </div>
        <%= submit_tag "Add selected to invoice", class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
      </div>

      <div class="overflow-hidden rounded-xl border border-slate-100">
        <table class="min-w-full divide-y divide-slate-100 text-sm">
          <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-400">
            <tr>
              <th class="px-4 py-3 text-left"></th>
              <th class="px-4 py-3 text-left">Date</th>
              <th class="px-4 py-3 text-left">User</th>
              <th class="px-4 py-3 text-right">Hours</th>
              <th class="px-4 py-3 text-right">Rate</th>
              <th class="px-4 py-3 text-right">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 text-slate-600">
            <% unbilled_timesheets.each do |entry| %>
              <tr>
                <td class="px-4 py-3">
                  <%= check_box_tag "timesheet_entry_ids[]", entry.id, false, class: "h-4 w-4 rounded border-slate-300 text-slate-900" %>
                </td>
                <td class="px-4 py-3"><%= entry.work_date.strftime("%d %b %Y") %></td>
                <td class="px-4 py-3"><%= entry.user.display_name %></td>
                <td class="px-4 py-3 text-right"><%= entry.hours.round(2) %></td>
                <td class="px-4 py-3 text-right"><%= number_to_currency(entry.hourly_rate_cents / 100.0) %></td>
                <td class="px-4 py-3 text-right font-medium text-slate-900"><%= number_to_currency(entry.total_cents / 100.0) %></td>
              </tr>
            <% end %>
            <% if unbilled_timesheets.empty? %>
              <tr>
                <td class="px-4 py-6 text-center text-sm text-slate-500" colspan="6">No unbilled timesheets.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% else %>
    <div class="mt-4 rounded-xl border border-dashed border-slate-200 p-4 text-sm text-slate-500">
      Only admins can add timesheets to invoices.
    </div>
  <% end %>
</div>
