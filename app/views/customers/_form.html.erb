<%= form_with model: customer, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :name, class: "text-sm font-medium text-slate-700" %>
    <%= form.text_field :name, class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= form.label :email, class: "text-sm font-medium text-slate-700" %>
      <%= form.email_field :email, class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
    </div>
    <div>
      <%= form.label :phone, class: "text-sm font-medium text-slate-700" %>
      <%= form.telephone_field :phone, class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :billing_address, class: "text-sm font-medium text-slate-700" %>
    <%= form.text_area :billing_address, rows: 4, class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
    <%= link_to "Cancel", customers_path, class: "text-sm text-slate-500 hover:text-slate-700" %>
  </div>
<% end %>
