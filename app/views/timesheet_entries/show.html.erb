<% content_for :page_title, "Timesheet" %>

<div class="space-y-6">
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-start justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Timesheet</p>
        <h2 class="mt-2 text-xl font-semibold text-slate-900">
          <%= @timesheet_entry.work_date.strftime("%a %b %d").upcase %>
        </h2>
        <p class="mt-1 text-sm text-slate-500"><%= @timesheet_entry.job&.title || "Unassigned" %></p>
        <p class="mt-1 text-sm text-slate-500"><%= @timesheet_entry.user.display_name %></p>
      </div>
      <div class="text-right">
        <% if @timesheet_entry.draft? %>
          <span class="rounded-full bg-rose-100 px-3 py-1 text-xs font-semibold text-rose-700">Draft</span>
        <% elsif @timesheet_entry.billed? %>
          <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">Billed</span>
        <% else %>
          <span class="rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-700">Unbilled</span>
        <% end %>
        <p class="mt-3 text-sm text-slate-500"><%= number_to_currency(@timesheet_entry.total_cents / 100.0) %></p>
        <p class="text-xs text-slate-400"><%= @timesheet_entry.hours.round(2) %>h</p>
      </div>
    </div>
    <div class="mt-4 flex flex-wrap items-center gap-3">
      <%= link_to "Back to timesheets", timesheet_entries_path, class: "text-sm font-semibold text-slate-600 hover:text-slate-900" %>
      <% unless @timesheet_entry.billed? %>
        <%= link_to "Edit", edit_timesheet_entry_path(@timesheet_entry), class: "text-sm font-semibold text-slate-600 hover:text-slate-900" %>
      <% end %>
    </div>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="text-sm font-semibold text-slate-900">Details</p>
      <div class="mt-4 space-y-2 text-sm text-slate-600">
        <div class="flex items-center justify-between">
          <span>Work date</span>
          <span class="font-semibold text-slate-900"><%= @timesheet_entry.work_date.strftime("%a %b %d, %Y") %></span>
        </div>
        <div class="flex items-center justify-between">
          <span>Duration</span>
          <span class="font-semibold text-slate-900"><%= @timesheet_entry.hours.round(2) %>h</span>
        </div>
        <% if current_user&.owner? || current_user&.admin? %>
          <div class="flex items-center justify-between">
            <span>Billing rate</span>
            <span class="font-semibold text-slate-900"><%= number_to_currency(@timesheet_entry.hourly_rate_cents / 100.0) %></span>
          </div>
        <% end %>
        <div class="flex items-center justify-between">
          <span>Job</span>
          <span class="font-semibold text-slate-900"><%= @timesheet_entry.job&.title || "Unassigned" %></span>
        </div>
      </div>
      <% if @timesheet_entry.notes.present? %>
        <div class="mt-4 border-t border-slate-100 pt-4 text-sm text-slate-600">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Notes</p>
          <p class="mt-2 whitespace-pre-line text-slate-700"><%= @timesheet_entry.notes %></p>
        </div>
      <% end %>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="text-sm font-semibold text-slate-900">Audit trail</p>
      <div class="mt-4 space-y-4 text-sm text-slate-600">
        <% @audit_logs.each do |log| %>
          <div class="flex items-start justify-between gap-4">
            <div>
              <p class="font-semibold text-slate-900"><%= log.action.humanize %></p>
              <p class="mt-1 text-xs text-slate-500"><%= log.details.presence || "Timesheet updated." %></p>
              <p class="mt-1 text-xs text-slate-400"><%= log.user&.display_name || "System" %></p>
            </div>
            <p class="text-xs text-slate-400"><%= l(log.created_at, format: :short) %></p>
          </div>
        <% end %>
        <% if @audit_logs.empty? %>
          <p class="text-xs text-slate-400">No audit activity yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
