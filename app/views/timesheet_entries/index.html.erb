<% content_for :page_title, "Timesheets" %>

<div class="space-y-6">
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <%= form_with url: timesheet_entries_path, method: :get, class: "grid gap-4 md:grid-cols-5" do %>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">From</label>
        <%= date_field_tag :from, params[:from], class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">To</label>
        <%= date_field_tag :to, params[:to], class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Job</label>
        <%= select_tag :job_id, options_from_collection_for_select(@jobs, :id, :title, params[:job_id]), include_blank: "All jobs", class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <% if @users.any? %>
        <div>
          <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">User</label>
          <%= select_tag :user_id, options_from_collection_for_select(@users, :id, :email, params[:user_id]), include_blank: "All users", class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
        </div>
      <% end %>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Billed</label>
        <%= select_tag :billed, options_for_select([["All", ""], ["Unbilled", "unbilled"], ["Billed", "billed"]], params[:billed]), class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <div class="md:col-span-5 flex items-center gap-3">
        <%= submit_tag "Filter", class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
        <%= link_to "Reset", timesheet_entries_path, class: "text-sm text-slate-500 hover:text-slate-700" %>
        <%= link_to "New timesheet", new_timesheet_entry_path, class: "ml-auto rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="overflow-hidden rounded-xl border border-slate-100">
      <table class="min-w-full divide-y divide-slate-100 text-sm">
        <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-400">
          <tr>
            <th class="px-4 py-3 text-left">Date</th>
            <th class="px-4 py-3 text-left">Job</th>
            <th class="px-4 py-3 text-left">User</th>
            <th class="px-4 py-3 text-right">Hours</th>
            <th class="px-4 py-3 text-right">Rate</th>
            <th class="px-4 py-3 text-right">Total</th>
            <th class="px-4 py-3 text-right">Status</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 text-slate-600">
          <% @timesheet_entries.each do |entry| %>
            <tr>
              <td class="px-4 py-3"><%= entry.work_date.strftime("%d %b %Y") %></td>
              <td class="px-4 py-3 text-slate-900"><%= link_to entry.job.title, job_path(entry.job), class: "hover:underline" %></td>
              <td class="px-4 py-3"><%= entry.user.display_name %></td>
              <td class="px-4 py-3 text-right"><%= entry.hours.round(2) %></td>
              <td class="px-4 py-3 text-right"><%= number_to_currency(entry.hourly_rate_cents / 100.0) %></td>
              <td class="px-4 py-3 text-right font-medium text-slate-900"><%= number_to_currency(entry.total_cents / 100.0) %></td>
              <td class="px-4 py-3 text-right">
                <% if entry.billed? %>
                  <span class="rounded-full bg-emerald-100 px-2 py-1 text-xs font-semibold text-emerald-700">Billed</span>
                <% else %>
                  <span class="rounded-full bg-amber-100 px-2 py-1 text-xs font-semibold text-amber-700">Unbilled</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-right">
                <%= link_to "Edit", edit_timesheet_entry_path(entry), class: "text-sm font-semibold text-slate-700 hover:text-slate-900" %>
              </td>
            </tr>
          <% end %>
          <% if @timesheet_entries.empty? %>
            <tr>
              <td class="px-4 py-6 text-center text-sm text-slate-500" colspan="8">No timesheets found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
