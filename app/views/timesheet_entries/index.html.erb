<% content_for :page_title, "Timesheets" %>

<div class="space-y-6">
  <% admin_view = current_user&.owner? || current_user&.admin? %>
  <% if admin_view %>
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <%= form_with url: timesheet_entries_path, method: :get, class: "grid gap-4 md:grid-cols-5" do %>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">From</label>
        <%= date_field_tag :from, params[:from], class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">To</label>
        <%= date_field_tag :to, params[:to], class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Job</label>
        <%= select_tag :job_id, options_from_collection_for_select(@jobs, :id, :title, params[:job_id]), include_blank: "All jobs", class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
      <% if @users.any? %>
        <div>
          <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">User</label>
          <%= select_tag :user_id, options_from_collection_for_select(@users, :id, :display_name, params[:user_id]), include_blank: "All users", class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
        </div>
      <% end %>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400">Status</label>
        <%= select_tag :billed,
          options_for_select([["All", ""], ["Draft", "draft"], ["Unbilled", "unbilled"], ["Billed", "billed"]], params[:billed]),
          class: "mt-2 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm" %>
      </div>
        <div class="md:col-span-5 flex items-center gap-3">
          <%= submit_tag "Filter", class: "rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
          <%= link_to "Reset", timesheet_entries_path, class: "text-sm text-slate-500 hover:text-slate-700" %>
          <div class="ml-auto flex items-center gap-3">
            <%= link_to "New timesheet", new_timesheet_entry_path, class: "rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50" %>
            <%= link_to "Draft payroll",
              draft_payroll_preview_timesheet_entries_path,
              data: { turbo_frame: "modal" },
              class: "rounded-xl bg-sky-400 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-600" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <turbo-frame id="modal" data-controller="modal"></turbo-frame>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="overflow-hidden rounded-xl border border-slate-100">
      <table class="min-w-full divide-y divide-slate-100 text-sm">
        <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-400">
          <tr>
            <th class="px-4 py-3 text-left">Date</th>
            <th class="px-4 py-3 text-left">Job</th>
            <th class="px-4 py-3 text-left">User</th>
            <th class="px-4 py-3 text-right">Hours</th>
            <th class="px-4 py-3 text-right"><%= admin_view ? "Rate" : "Cost" %></th>
            <th class="px-4 py-3 text-right">Total</th>
            <% if admin_view %>
              <th class="px-4 py-3 text-right">Status</th>
              <th class="px-4 py-3"></th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 text-slate-600">
          <% @timesheet_entries.each do |entry| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-3">
                <% if admin_view %>
                  <%= link_to timesheet_entry_path(entry), class: "block text-slate-700" do %>
                    <%= entry.work_date.strftime("%a %b %d").upcase %>
                  <% end %>
                <% else %>
                  <%= entry.work_date.strftime("%a %b %d").upcase %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-slate-900">
                <% if entry.job.present? %>
                  <% if admin_view %>
                    <%= link_to timesheet_entry_path(entry), class: "block" do %>
                      <span class="hover:underline"><%= entry.job.title %></span>
                    <% end %>
                  <% else %>
                    <span><%= entry.job.title %></span>
                  <% end %>
                <% else %>
                  <span class="text-slate-400">Unassigned</span>
                <% end %>
              </td>
              <td class="px-4 py-3">
                <% if admin_view %>
                  <%= link_to timesheet_entry_path(entry), class: "block text-slate-700" do %>
                    <%= entry.user.display_name %>
                  <% end %>
                <% else %>
                  <%= entry.user.display_name %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-right">
                <% if admin_view %>
                  <%= link_to timesheet_entry_path(entry), class: "block text-slate-700 text-right" do %>
                    <%= entry.hours.round(2) %>
                  <% end %>
                <% else %>
                  <%= entry.hours.round(2) %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-right">
                <% rate_cents = admin_view ? entry.hourly_rate_cents : entry.user.hourly_cost_cents %>
                <% if admin_view %>
                  <%= link_to timesheet_entry_path(entry), class: "block text-slate-700 text-right" do %>
                    <%= number_to_currency(rate_cents / 100.0) %>
                  <% end %>
                <% else %>
                  <%= number_to_currency(rate_cents / 100.0) %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-right font-medium text-slate-900">
                <% if admin_view %>
                  <%= link_to timesheet_entry_path(entry), class: "block text-right" do %>
                    <%= number_to_currency(entry.total_cents / 100.0) %>
                  <% end %>
                <% else %>
                  <%= number_to_currency(entry.total_cents / 100.0) %>
                <% end %>
              </td>
              <% if admin_view %>
                <td class="px-4 py-3 text-right">
                  <%= link_to timesheet_entry_path(entry), class: "inline-block" do %>
                    <% if entry.draft? %>
                      <span class="rounded-full bg-rose-100 px-2 py-1 text-xs font-semibold text-rose-700">Draft</span>
                    <% elsif entry.billed? %>
                      <span class="rounded-full bg-emerald-100 px-2 py-1 text-xs font-semibold text-emerald-700">Billed</span>
                    <% else %>
                      <span class="rounded-full bg-amber-100 px-2 py-1 text-xs font-semibold text-amber-700">Unbilled</span>
                    <% end %>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-right">
                  <div class="flex items-center justify-end gap-3">
                    <% unless entry.billed? %>
                      <%= link_to "Edit", edit_timesheet_entry_path(entry), class: "text-sm font-semibold text-slate-700 hover:text-slate-900" %>
                    <% end %>
                    <% if entry.draft? %>
                      <% if entry.job.present? %>
                        <%= button_to "Approve", approve_timesheet_entry_path(entry), method: :patch, class: "text-sm font-semibold text-emerald-600 hover:text-emerald-700" %>
                      <% else %>
                        <span class="text-xs text-slate-400">Needs job</span>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
          <% if @timesheet_entries.empty? %>
            <tr>
              <td class="px-4 py-6 text-center text-sm text-slate-500" colspan="<%= admin_view ? 8 : 6 %>">No timesheets found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
