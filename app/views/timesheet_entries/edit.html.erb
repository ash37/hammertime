<% content_for :page_title, "Edit timesheet" %>

<div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
  <%= render "form", timesheet_entry: @timesheet_entry %>

  <% if policy(@timesheet_entry).destroy? %>
    <div class="mt-6 border-t border-slate-200 pt-6">
      <%= button_to "Delete timesheet",
        timesheet_entry_path(@timesheet_entry),
        method: :delete,
        data: { turbo_confirm: "Delete this timesheet entry?" },
        class: "rounded-xl border border-rose-200 px-4 py-2 text-sm font-semibold text-rose-600 hover:bg-rose-50" %>
    </div>
  <% end %>
</div>
