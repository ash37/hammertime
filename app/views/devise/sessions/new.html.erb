<div class="space-y-6">
  <div>
    <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Hammertime</p>
    <h1 class="mt-2 text-2xl font-semibold text-slate-900">Sign in</h1>
    <p class="mt-2 text-sm text-slate-500">Use your account credentials to continue.</p>
  </div>

  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, class: "text-sm font-medium text-slate-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm shadow-sm focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200" %>
    </div>

    <div>
      <%= f.label :password, class: "text-sm font-medium text-slate-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 w-full rounded-xl border border-slate-200 px-3 py-2 text-sm shadow-sm focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-400" %>
        <%= f.label :remember_me, class: "text-sm text-slate-600" %>
      </div>
    <% end %>

    <%= f.submit "Sign in", class: "w-full rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
  <% end %>
</div>
